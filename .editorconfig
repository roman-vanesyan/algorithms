[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 80
tab_width = 2
trim_trailing_whitespace = true

[{Makefile,*.mk}]
indent_style = tab

[*.{md,markdown}]
# Markdown has sensible whitespace
trim_trailing_whitespace = false

[*.{h,hpp,cpp}]
indent_style = space
tab_width = 4
